<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.colors2web.zummix_app">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_zummix"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity android:name=".Activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity android:name=".Activities.ForgotActivity"></activity>


        <activity android:name=".Activities.HomePageActivity"
            android:label="HomePage"
            android:parentActivityName=".Activities.LoginActivity"
            android:theme="@style/MyMaterialTheme">


        </activity>


        <activity android:name=".Activities.OrderSearchActivity"
            android:label="Order Details"
            android:parentActivityName=".Activities.HomePageActivity">

        </activity>

        <activity android:name=".Activities.OrderSearch2Activity"
            android:label="Order Details"
            android:parentActivityName=".Activities.HomePageActivity">

        </activity>

        <activity android:name=".Activities.OrderGroupByCustomerActivity"
            android:label="Order Groups"
            android:parentActivityName=".Activities.LoginActivity">


        </activity>

        <activity android:name=".Activities.GroupCusDetails"
            android:label="Customer Details"
            android:parentActivityName=".Activities.OrderGroupByCustomerActivity">

        </activity>

        <activity android:name=".Activities.TrackOrderSearchActivity"
            android:label="Order Details"
            android:parentActivityName=".Activities.OrderGroupByCustomerActivity">
        </activity>

        <activity android:name=".Activities.ItemSearchActivity"
            android:label="Item Details"
            android:parentActivityName=".Activities.OrderGroupByCustomerActivity">

        </activity>

        <activity android:name=".Activities.BoxSearchActivity"
            android:label="Order Details"
            android:parentActivityName=".Activities.OrderGroupByCustomerActivity">

        </activity>

    </application>

</manifest>