<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_modal"
    android:layout_marginTop="10sp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:orientation="vertical">

        <!--AutoComplete Text Halni Ysma-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="@dimen/margin_down"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name: "
                android:padding="4dp"
                android:gravity="left"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView

                android:id="@+id/pop_prob_name"
                android:layout_width="fill_parent"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:paddingLeft="11dp"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                 />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:hint="Price:" />


            <android.support.design.widget.TextInputEditText

                android:id="@+id/pop_prob_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:textSize="16sp"
                android:paddingLeft="11dp"
                android:paddingBottom="8dp"
                 />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:hint="Weight:" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pop_prob_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:textSize="16sp"
                android:paddingLeft="11dp"
                android:paddingBottom="8dp"
                />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="6dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="8dp"
            android:paddingLeft="11dp"
            android:hint="Select UOM:" />

        <Spinner
            android:id="@+id/uom_spinner"
            android:padding="10dp"
            android:layout_width="200dp"
            android:background="@drawable/popup_spinner"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingBottom="8dp"
            android:spinnerMode="dialog"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="6dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="8dp"
            android:paddingLeft="11dp"
            android:hint="Select Country:" />

        <Spinner
            android:id="@+id/country_spinner"
            android:padding="10dp"
            android:layout_width="200dp"
            android:background="@drawable/popup_spinner"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingBottom="8dp"
            android:spinnerMode="dialog"


            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swich_left"
        android:padding="@dimen/margin_down"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="6dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="8dp"
            android:paddingLeft="11dp"
            android:hint="Remove from problem sku?" />

        <RadioGroup
            android:id="@+id/toggle_prob_adapter"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pink_out_line"
            android:orientation="horizontal">

            <RadioButton
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/yes"
                android:background="@drawable/toggle_widget_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="YES"
                android:textColor="@color/white" />

            <RadioButton
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="NO"
                android:textColor="@color/white" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/pop_prob_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="UPDATE"
            android:textColor="@color/primary_dark"
            android:textSize="16sp"
            android:textStyle="bold" />




        <Button
            android:id="@+id/prop_prob_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="CANCEL"
            android:textColor="@color/primary_dark"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>